<li>
  <%= gravatar_for user, size: 50 %>
  <%= link_to user.name, user %>
  <% if (current_user.admin? && current_user != user) || (!current_user.admin? && current_user == user) %>  # 条件追加
    | <%= link_to "削除", user_path(user), method: :delete,
                                  data: { confirm: "本当に削除しますか？" } %>
  <% end %>  # 追加
</li>
